<Window x:Class="CIS345FinalApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XML Search" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="211" Margin="105,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="388" IsEnabled="False"/>
        <TextBox x:Name="txtContent" HorizontalAlignment="Left" Height="23" Margin="105,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <Label x:Name="lblTag" Content="Search Tag" HorizontalAlignment="Left" Margin="32,27,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblContent" Content="Search Content" HorizontalAlignment="Left" Margin="9,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.658,0.192"/>
        <Label x:Name="lblResults" Content="Results" HorizontalAlignment="Left" Margin="53,87,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnQuery" Content="Run Query" HorizontalAlignment="Left" Margin="353,19,0,0" VerticalAlignment="Top" Width="140" Height="63" Click="btnQuery_Click"/>
        <ComboBox x:Name="cmbTag" HorizontalAlignment="Left" Margin="105,31,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
